<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-3 profile border border-primary">
    <div class="profile-sidebar">
      <div class="profile-userpic">
        <img src="/images/default_pic.png" class="img-responsive" alt="Cinque Terre">
      </div>
      <div class="profile-usertitle">
        <div class="profile-name">
          <%= @user.name %>
        </div>
        <div class="profile-username">
          ユーザー名: <%= @user.username %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div>
      <% created_requests = @user.created_requests %>
      <h3>投稿した募集 (<%= created_requests.count %>)</h3>
      <% if created_requests.any? %>
        <ol>
          <%= render partial: 'shared/request', collection: created_requests%>
        </ol>
      <% end %>
    </div>
    <div>
      <% applied_rejected_requests = @user.get_my_applieds_rejecteds %>
      <h3>応募した募集 (<%= applied_rejected_requests.count %>)</h3>
      <% if applied_rejected_requests.any? %>
        <ol>
          <%= render partial: 'shared/request', collection: applied_rejected_requests%>
        </ol>
      <% end %>
    </div>
    <div>
      <% working_requests = @user.get_my_workings %>
      <h3>取り組み中のお仕事 (<%= working_requests.count %>)</h3>
      <% if working_requests.any? %>
        <ol>
          <%= render partial: 'shared/request', collection: working_requests%>
        </ol>
      <% end %>
    </div>
    <div>
      <% completed_requests = @user.get_my_completeds %>
      <h3>完了済みのお仕事 (<%= completed_requests.count %>)</h3>
      <% if completed_requests.any? %>
        <ol>
          <%= render partial: 'shared/request', collection: completed_requests%>
        </ol>
      <% end %>
    </div>
  </div>
</div>