<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.requests.any? %>
      <h3>投稿リクエスト (<%= @user.requests.count %>)</h3>
      <ol>
      <%= render partial: 'shared/request', collection: @requests%>
      </ol>
    <% end %>
  </div>
</div>