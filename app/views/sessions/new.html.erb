<% provide(:title, "ログイン") %>
<div class="Cform-frame"> 
  <div class="col-md-12">
    <h1>ログイン</h1>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(:session, url: login_path, html:{ class: "Cform-for rounded-lg border" }) do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'Cform-control' %>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'Cform-control' %>
        <div class="row justify-content-center">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>ログイン状態を保存する</span>
          <% end %>
        </div>
        <div class="Chorizontal-center">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
      <p><%= link_to "新規アカウント作成", new_user_path %></p>
    </div>
  </div>
</div>